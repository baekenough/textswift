{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable", "WebWorker"],
    "types": ["chrome"],
    "rootDir": "src",
    "outDir": "dist/src",
    "isolatedModules": false
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["src/cli/**"]
}
